{
  "dashboard": {
    "id": null,
    "title": "Sustainability & ESG Metrics",
    "tags": ["sustainability", "esg", "carbon", "energy"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "1m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Current Carbon Emissions",
        "type": "stat",
        "targets": [
          {
            "expr": "sustainability:carbon_emissions_rate_1h",
            "legendFormat": "kg CO2e/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kg/h",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 3},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Energy Consumption",
        "type": "stat",
        "targets": [
          {
            "expr": "sustainability:energy_consumption_rate_1h",
            "legendFormat": "kWh/hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kwatth",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Energy Efficiency",
        "type": "stat",
        "targets": [
          {
            "expr": "sustainability:energy_efficiency_1h",
            "legendFormat": "Predictions/kWh"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "ESG Score",
        "type": "stat",
        "targets": [
          {
            "expr": "sustainability:esg_score_daily * 100",
            "legendFormat": "ESG Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Carbon Emissions Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sustainability:carbon_emissions_rate_1h",
            "legendFormat": "Carbon Emissions (kg CO2e/hour)"
          },
          {
            "expr": "sustainability:carbon_per_prediction_1h * 1000",
            "legendFormat": "Carbon per Prediction (g CO2e)"
          }
        ],
        "yAxes": [
          {
            "label": "Carbon Emissions",
            "min": 0
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Energy Consumption Breakdown",
        "type": "graph",
        "targets": [
          {
            "expr": "energy_consumption_kwh{component=\"training\"}",
            "legendFormat": "Training"
          },
          {
            "expr": "energy_consumption_kwh{component=\"inference\"}",
            "legendFormat": "Inference"
          },
          {
            "expr": "energy_consumption_kwh{component=\"data_processing\"}",
            "legendFormat": "Data Processing"
          },
          {
            "expr": "energy_consumption_kwh{component=\"infrastructure\"}",
            "legendFormat": "Infrastructure"
          }
        ],
        "yAxes": [
          {
            "label": "Energy (kWh)",
            "min": 0
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Renewable Energy Usage",
        "type": "piechart",
        "targets": [
          {
            "expr": "sustainability:renewable_energy_percentage_1h * 100",
            "legendFormat": "Renewable"
          },
          {
            "expr": "(1 - sustainability:renewable_energy_percentage_1h) * 100",
            "legendFormat": "Non-Renewable"
          }
        ],
        "gridPos": {"h": 9, "w": 8, "x": 0, "y": 17}
      },
      {
        "id": 8,
        "title": "ESG Metrics Breakdown",
        "type": "graph",
        "targets": [
          {
            "expr": "environmental_score * 100",
            "legendFormat": "Environmental"
          },
          {
            "expr": "social_score * 100",
            "legendFormat": "Social"
          },
          {
            "expr": "governance_score * 100",
            "legendFormat": "Governance"
          }
        ],
        "yAxes": [
          {
            "label": "Score (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 9, "w": 8, "x": 8, "y": 17}
      },
      {
        "id": 9,
        "title": "Carbon Budget Tracking",
        "type": "bargauge",
        "targets": [
          {
            "expr": "carbon_budget_used / carbon_budget_total * 100",
            "legendFormat": "Carbon Budget Used"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 9, "w": 8, "x": 16, "y": 17}
      }
    ]
  }
}